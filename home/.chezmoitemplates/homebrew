{{- $brew := lookPath "brew" }}
{{- if not $brew }}
{{-   if eq .chezmoi.os "darwin" -}}
{{-     $brew = findExecutable "brew" (list "/opt/homebrew/bin" "/usr/local/bin") -}}
{{-   else if eq .chezmoi.os "linux" -}}
{{-     $brew = findExecutable "brew" (list "/home/linuxbrew/.linuxbrew/bin" "$HOME/.linuxbrew/bin/brew") -}}
{{-   end -}}
{{- end -}}
{{- if stat $brew -}}
eval "$({{ $brew }} shellenv)"
{{- end -}}
