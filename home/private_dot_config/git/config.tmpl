[add.interactive]
  useBuiltin = false

[alias]
  a = "add -A"
  am = "amend"
  amend = "commit --amend --no-edit" # amend your last commit
  b = "branch --verbose --verbose"
  ba = "branch --all --verbose --verbose"
  bd = "branch -d"
  bD = "branch -D"
  br = "browse"
  browse = "!gh browse"
  c = "commit --message"
  ci = "commit"
  co = "checkout"
  cob = "checkout -b"
  cp = "cherry-pick"
  d = "diff"
  dc = "diff --cached"
  f = "fetch"
  fa = "fetch --all --prune --prune-tags"
  fv = "fetch --verbose"
  ha = "hash"
  hac = "!git hash | pbcopy"
  hash = "rev-parse --short HEAD" # print the most recent commit's hash
  l = "log"
  lb = "log --graph --branches"
  p = "push"
  pf = "push --force"
  pl = "pull"
  pu = "push --set-upstream"
  r = "remote --verbose"
  rb = "rebase"
  rbc = "rebase --continue"
  s = "status --short"
  sb = "show-branch"
  sh = "show"
  st = "status"
  sy = "sync"
  sync = "!gh repo sync"
  u = "up"
  up = "pull --rebase --autostash" # this is basically what `git-up` did
  uc = "uncommit"
  uncommit = "reset --soft HEAD^" # go back before last commit

[branch]
  autoSetupRebase = always

[color]
  ui = true
[color "branch"]
  current = green bold
  local = green
  remote = yellow
[color "diff"]
  commit = green bold
  frag = magenta bold
  meta = yellow bold
  new = green bold
  old = red bold
  whitespace = red reverse
[color "diff-higlight"]
  newHighlight = green bold 52
  newNormal = green bold
  oldHighlight = red bold 52
  oldNormal = red bold
[color "status"]
  added = green bold
  changed = yellow bold
  branch = green bold
  unmerged = red bold
  untracked = magenta bold

[commit]
  gpgSign = true

[core]
  autocrlf = input
  editor = vim
  ignoreCase = false
{{- if $deltaPath }}
  pager = delta
{{- end }}
  precomposeUnicode = true
  trustctime = false
  untrackedCache = true

{{ if $ghPath -}}
[credential "https://github.com"]
  helper = !{{ $ghPath | quote }} auth git-credential
[credential "https://gist.github.com"]
  helper = !{{ $ghPath | quote }} auth git-credential
{{- end }}

[diff]
  colorMoved = default
  compactionHeuristic = true # let's give it a try!
  mnemonicPrefix = true
  renames = copies

[diff "bin"]
  textconv = hexdump -v -C

[fetch]
  prune = true
  pruneTags = true

{{ if $lfsPath -}}
[filter "lfs"]
  required = true
  clean = git-lfs clean -- %f
  process = git-lfs filter-process
  smudge = git-lfs smudge -- %f
{{- end }}

[format]
  pretty = "%C(red)%h%C(reset) -%C(yellow)%d%C(reset) %s %C(green)(%cr)%C(reset) %C(bold blue)<%an>%C(reset)"

{{ if $gpgPath -}}
[gpg]
  program = {{ $gpgPath | quote }}
{{- end }}

[init]
  defaultBranch = main

{{ if $deltaPath -}}
[interactive]
  diffFilter = delta --color-only

[delta]
  minus-style = bold red "#3f0001"
  minus-non-emph-style = bold red "#3f0001"
  minus-emph-style = bold red 52
  minus-empty-line-marker-style = normal "#3f0001"
  plus-style = bold green "#002800"
  plus-non-emph-style = bold green "#002800"
  plus-emph-style = bold green 22
  plus-empty-line-marker-style  = normal "#002800"
  syntax-theme = TwoDark
{{- end }}

[merge]
  conflictStyle = diff3

[pull]
  rebase = true

[push]
  autoSetupRemote = true
  default = simple
  followTags = true

[submodule]
  recurse = true

[tag]
  gpgSign = true
