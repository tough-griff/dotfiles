# Provides abbr for completions, aliases for use in `eval`
abbr npmi 'npm install'
alias npmi 'npm install'
abbr npml 'npm ls --depth 0'
alias npml 'npm ls --depth 0'

abbr ne 'nodenv each -sv'
abbr npmle 'nodenv each -sv npm list -g --depth=0'

alias rrepl "env NODE_REPL_MODE=strict NODE_OPTIONS='--experimental-repl-await' rrepl"
