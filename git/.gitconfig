[include]
  path = ~/.gitconfig.personal

[alias]
  # commonly used git functions
  a = "add -A"
  b = "branch --verbose --verbose"
  ba = "branch --all --verbose --verbose"
  c = "commit --message"
  ci = "commit"
  co = "checkout"
  cob = "checkout -b"
  d = "diff"
  dc = "diff --cached"
  f = "fetch --verbose --prune"
  fa = "fetch --all --verbose --prune"
  h = "hash"
  hc = "!git hash | pbcopy"
  l = "log --graph"
  lb = "log --graph --branches"
  p = "push"
  pl = "pull"
  pu = "push --set-upstream"
  r = "remote --verbose"
  s = "status --short"
  sb = "show-branch"
  sh = "show"
  st = "status"
  u = "up"

  # new functionality
  amend = "commit --amend --no-edit"      # amend your last commit
  hash = "rev-parse --short HEAD"         # print the most recent commit's hash
  uncommit = "reset --soft HEAD^"         # go back before last commit
  up = "pull --rebase --autostash"        # this is basically what `git-up` did

[branch]
  autosetuprebase = always

[color]
  ui = true
[color "branch"]
  current = green bold
  local = green
  remote = yellow
[color "diff"]
  commit = green bold
  frag = magenta bold
  meta = yellow bold
  new = green bold
  old = red bold
  whitespace = red reverse
[color "diff-higlight"]
  newHighlight = green bold 52
  newNormal = green bold
  oldHighlight = red bold 52
  oldNormal = red bold
[color "status"]
  added = green bold
  changed = yellow bold
  branch = green bold
  unmerged = red bold
  untracked = magenta bold

[commit]
  gpgsign = true

[core]
  autocrlf = input
  excludesfile = ~/.gitignore
  pager = diff-so-fancy | less --tabs=4 -FRSX

[diff]
  compactionHeuristic = true # let's give it a try!
  mnemonicprefix = true

[format]
  pretty = "%C(red)%h%C(reset) -%C(yellow)%d%C(reset) %s %C(green)(%cr)%C(reset) %C(bold blue)<%an>%C(reset)"

[interactive]
  diffFilter = diff-so-fancy

[pull]
  rebase = true

[push]
  default = current
  followTags = true

[url "https://github.com/"]
  insteadOf = git://github.com/
  insteadOf = git@github.com:
  insteadOf = ssh://git@github.com:
[url "https://git.heroku.com/"]
  insteadOf = git://heroku.com/
  insteadOf = git@heroku.com:
  insteadOf = ssh://git@heroku.com:

# plugins and etc
[credential]
  helper = osxkeychain

[diff-so-fancy]
	first-run = false

[gpg]
  program = /usr/local/bin/gpg

[heroku]
  account = personal
  remote = heroku

[hub]
  protocol = https

[filter "lfs"]
  required = true
  clean = git-lfs clean -- %f
  process = git-lfs filter-process
  smudge = git-lfs smudge -- %f
