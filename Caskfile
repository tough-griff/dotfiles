# Install native applications
# Usage: `brew bundle Caskfile`

# Update Homebrew prior to installs
update

# Install brew-cask
tap phinze/cask
install brew-cask
tap caskroom/versions

# Install applications
cask install alfred
cask install atom --appdir=/Applications
cask install bartender
cask install bittorrent-sync
cask install caffeine
cask install charles
cask install dropbox
cask install firefox --appdir=/Applications
cask install firefox-aurora
cask install flux
cask install google-chrome --appdir=/Applications
cask install google-chrome-canary
cask install google-drive
cask install hipchat
cask install iterm2
cask install seil
cask install spectacle
cask install the-unarchiver --appdir=/Applications
cask install transmission
cask install transmit
cask install virtualbox
cask install vlc
cask install xquartz
